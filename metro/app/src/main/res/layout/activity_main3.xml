<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/toolbar_main" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--*************************classic****************-->
                <RelativeLayout
                    android:id="@+id/classic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/check_classic"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/checkbox_classic"
                        android:button="@color/white"
                        android:checked="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleX="1.15"
                        android:scaleY="1.25" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <CheckBox
                            android:id="@+id/check_icon_classic"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/checkbox_classic_icon"
                            android:button="@color/white"
                            android:checked="false"
                            android:clickable="true"
                            android:focusable="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="@string/titre_classic"
                                android:textColor="@color/titres"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/titre_classic_text"
                                android:textColor="@color/titres"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="50dp"
                            android:src="@drawable/prix_classic" />
                    </LinearLayout>
                </RelativeLayout>
                <!--*************************Etudiant****************-->
                <RelativeLayout
                    android:id="@+id/Etudiant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/classic">

                    <CheckBox
                        android:id="@+id/check_etudiant"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/checkbox_classic"
                        android:button="@color/white"
                        android:checked="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleX="1.15"
                        android:scaleY="1.25" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/checkbox_etudiant"
                            android:button="@color/white"
                            android:checked="false"
                            android:clickable="true"
                            android:focusable="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="@string/titre_etudiant"
                                android:textColor="@color/titres"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/titre_classic_text"
                                android:textColor="@color/titres"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/titre_etudiant_text"
                                android:textColor="@color/titres"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="50dp"
                            android:src="@drawable/prix_etudiant" />
                    </LinearLayout>
                </RelativeLayout>
                <!--*************************Senior****************-->
                <RelativeLayout
                    android:id="@+id/senior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Etudiant">

                    <CheckBox
                        android:id="@+id/check_senior"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/checkbox_classic"
                        android:button="@color/white"
                        android:checked="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleX="1.15"
                        android:scaleY="1.25" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/checkbox_senior"
                            android:button="@color/white"
                            android:checked="false"
                            android:clickable="true"
                            android:focusable="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="@string/titre_senior"
                                android:textColor="@color/titres"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/titre_classic_text"
                                android:textColor="@color/titres"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/titre_senior_text"
                                android:textColor="@color/titres"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="50dp"
                            android:src="@drawable/prix_senior" />
                    </LinearLayout>
                </RelativeLayout>
                <!--*************************Annuel classic****************-->
                <RelativeLayout
                    android:id="@+id/annuel_classic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/senior">

                    <CheckBox
                        android:id="@+id/check_annuel_classic"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/checkbox_classic"
                        android:button="@color/white"
                        android:checked="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleX="1.15"
                        android:scaleY="1.25" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/checkbox_annuelclassic"
                            android:button="@color/white"
                            android:checked="false"
                            android:clickable="true"
                            android:focusable="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="@string/titre_annuel_classic"
                                android:textColor="@color/titres"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/titre_annuel_text"
                                android:textColor="@color/titres"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/prix_annuel_classic" />
                    </LinearLayout>
                </RelativeLayout>
                <!--*************************Annuel etudiant****************-->
                <RelativeLayout
                    android:id="@+id/annuel_etudiant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/annuel_classic">

                    <CheckBox
                        android:id="@+id/check_annuel_etudiant"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/checkbox_classic"
                        android:button="@color/white"
                        android:checked="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleX="1.15"
                        android:scaleY="1.25" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/checkbox_annuel_etudiant"
                            android:button="@color/white"
                            android:checked="false"
                            android:clickable="true"
                            android:focusable="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="@string/titre_annuel_etudiant"
                                android:textColor="@color/titres"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/lato_regular"
                                android:text="@string/titre_annuel_etudiant_text"
                                android:textColor="@color/titres"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/prix_annuel_etudiant" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/button_continuer"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="615dp"
            android:background="@drawable/button"/>

        <ImageView
            android:id="@+id/buttom_bar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/buttom_bar"
            android:scaleX="1.15"
            android:scaleY="1.25"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>