<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:id="@+id/layout"
    tools:context=".authentis.UI.WelcomActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        tools:context=".nfcscan">


        <ImageView
            android:id="@+id/SkullTrack"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:layout_gravity="top"
            android:src="@drawable/home_skull_track" />

        <ImageView
            android:id="@+id/authentis"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_below="@+id/SkullTrack"
            android:scaleType="fitXY"
            android:src="@drawable/authentis"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
           android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/text_Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/avenir_book"
            android:layout_below="@id/authentis"
            android:layout_above="@+id/commencer_bouton"
            android:text="@string/text_Main"
            android:textColor="@color/home_textcolor"
            android:textSize="16sp"
            android:gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/commencer_bouton"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_above="@+id/buttom_bar"
            android:layout_centerHorizontal="true"
            android:background="@drawable/home_button"
            android:scaleType="fitXY"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/buttom_bar"
            android:layout_width="250dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/buttom_bar" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>